<p id="notice"><%= notice %></p>

<h1>Configurações</h1>

<table>
  <thead>
    <tr>
      <th>Valor do ponto</th>
      <th>Maximode pontos por compra</th>
      <th>Validade dos pontos</th>
      <th>Numero de telefone</th>
      <th>Cpf</th>
      <th>Email</th>
      <th>Data de nascimento</th>
      <th>Genero</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @configures.each do |configure| %>
      <tr>
        <td><%= configure.ValorDoPonto %></td>
        <td><%= configure.MaximoDePontosPorCompra %></td>
        <td><%= configure.ValidadeDosPontos %></td>
        <td><%= configure.NumeroDeTelefone %></td>
        <td><%= configure.Cpf %></td>
        <td><%= configure.Email %></td>
        <td><%= configure.DataDeNascimento %></td>
        <td><%= configure.Genero %></td>
        <td><%= link_to 'Listar', configure %></td>
        <td><%= link_to 'Editar', edit_configure_path(configure) %></td>
        <td><%= link_to 'Apagar', configure, method: :delete, data: { confirm: 'Deseja Realmente Apagar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Configuração', new_configure_path %>
